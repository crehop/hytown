$C = "../Common.ui";

$C.@PageOverlay {}

$C.@DecoratedContainer {
  Anchor: (Width: 600, Height: 500);

  #Title {
    $C.@Title {
      @Text = "Claim Settings";
    }
  }

  #Content {
    LayoutMode: Top;
    Padding: (Full: 16);

    Label {
      Text: "Add Trusted Player";
      Style: (...$C.@DefaultLabelStyle, RenderBold: true, RenderUppercase: true);
      Anchor: (Bottom: 8);
    }

    Group {
      LayoutMode: Left;
      Anchor: (Bottom: 12);

      $C.@TextField #PlayerNameField {
        @Anchor = (Width: 300, Height: 38);
      }

      $C.@TextButton #AddButton {
        Text: "Add";
        Anchor: (Left: 10);
      }
    }

    Label #StatusMessage {
      Text: "";
      Style: (...$C.@DefaultLabelStyle, TextColor: #ff5555);
      Anchor: (Bottom: 8);
    }

    Group {
      Anchor: (Vertical: 8, Height: 1);
      Background: #5e512c;
    }

    Label {
      Text: "Permission Level";
      Style: (...$C.@DefaultLabelStyle, RenderBold: true, RenderUppercase: true);
      Anchor: (Bottom: 8);
    }

    Group {
      LayoutMode: Top;
      Anchor: (Bottom: 12);

      $C.@CheckBoxWithLabel #UseBlocksSetting {
        @Text = "Use (Doors/Buttons)";
      }

      $C.@CheckBoxWithLabel #ContainerSetting {
        @Text = "Container (Chests)";
      }

      $C.@CheckBoxWithLabel #WorkstationSetting {
        @Text = "Workstation (Crafting)";
      }

      $C.@CheckBoxWithLabel #BuildSetting {
        @Text = "Build (Break/Place)";
      }
    }

    Group {
      Anchor: (Vertical: 8, Height: 1);
      Background: #5e512c;
    }

    Label {
      Text: "Trusted Players";
      Style: (...$C.@DefaultLabelStyle, RenderBold: true, RenderUppercase: true);
      Anchor: (Bottom: 8);
    }

    Group #TrustedPlayers {
      LayoutMode: TopScrolling;
      Anchor: (Height: 150);
      ScrollbarStyle: $C.@DefaultScrollbarStyle;

      Group #TrustedEntries {
        LayoutMode: Top;
      }
    }

    Group {
      Anchor: (Vertical: 16, Height: 1);
      Background: #5e512c;
    }

    $C.@TextButton #CloseButton {
      Text: "Close";
    }
  }
}

$C.@BackButton {}
